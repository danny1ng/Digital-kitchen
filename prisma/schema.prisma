generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  ADMIN
  USER
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  role      Role     @default(USER)
  blocked   Boolean  @default(false)
  createdAt DateTime @default(now())
}

model Event {
  id          String       @id @default(uuid())
  title       String       @unique
  description String
  date        DateTime
  time        DateTime?
  banner      String?
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
  restoraunts Restaurant[]
}

model Restaurant {
  id                     String  @id @default(uuid())
  name                   String
  toastGuid              String?
  ToastToken             String?
  ToastManagementSetGuid String?
  event                  Event?  @relation(fields: [eventId], references: [id])
  eventId                String?
}
